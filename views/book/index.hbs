
<div class="row justify-content-center">
    <div class="col-md-8">
        <span class="display-4">Book</span>
        {{#each data}}
            <div class="card mb-3 border border-secondary" style="max-width: 700px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                    <img src="https://picsum.photos/id/1{{id}}/200/200" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/book/{{id}}">{{bookTitle}}</a></h5>
                            <p class="card-text">{{bookDescription}}</p>
                            <p class="card-text"><small class="text-muted">{{createdAt}}</small></p>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

        <ul class="pagination col-md-8 justify-content-center">
        {{!-- <li class="page-item disabled">
            {{#if ()}}
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            {{/if}}
        </li> --}}
        {{#each pages}}
            <li class="page-item"><a class="page-link" href="?page={{page}}">{{page}}</a></li>
        {{/each}}
        {{!-- <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li> --}}
        </ul>
</div>